{
    "name": "canadyarn",
    "description": "Check specific packages to have a single resolved version in yarn.lock",
    "version": "0.0.2",
    "license": "MIT",
    "author": "Lok Shun Hung <61226932+lokshunhung@users.noreply.github.com> (https://github.com/lokshunhung)",
    "homepage": "https://github.com/lokshunhung/canadyarn",
    "repository": {
        "type": "git",
        "url": "https://github.com/lokshunhung/canadyarn.git"
    },
    "main": "dist/index.js",
    "bin": "bin/canadyarn.js",
    "scripts": {
        "clean": "rimraf dist/",
        "build": "tsc",
        "lint": "eslint --ext .js,.ts .",
        "format": "prettier --write \"**/*.{js,json,md,ts}\"",
        "release": "standard-version"
    },
    "dependencies": {
        "@yarnpkg/lockfile": "^1.1.0",
        "chalk": "^5.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.0.0",
        "@commitlint/config-conventional": "^17.0.0",
        "@types/node": "^20.1.0",
        "@typescript-eslint/eslint-plugin": "^4.3.0",
        "@typescript-eslint/parser": "^4.3.0",
        "eslint": "^7.10.0",
        "eslint-config-prettier": "^8.0.0",
        "husky": "^3.1.0",
        "lint-staged": "^13.0.0",
        "prettier": "^2.1.2",
        "rimraf": "^5.0.0",
        "standard-version": "^9.0.0",
        "typescript": "^5.0.2"
    },
    "engines": {
        "node": ">=12.0.0",
        "yarn": ">=1.0.0 <2.0.0"
    },
    "files": [
        "bin/*",
        "dist/*",
        "CHANGELOG.md",
        "LICENSE",
        "README.md"
    ]
}
